{
  "commitizen": {
    "name": "cz_conventional_commits",
    "tag_format": "$version",
    "version_scheme": "semver",
    "version_provider": "cargo",
    "update_changelog_on_bump": true,
    "major_version_zero": true,
    "bump_message": "ci: release $current_version \u2192 $new_version [skip-ci]"
  }
}
